<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:fitsSystemWindows="true"
    tools:openDrawer="start"
    android:id="@+id/dw_main">

    <LinearLayout
        android:id="@+id/dw_main_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_main_menu"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/color_pink2"
            android:text="@string/main_menu"
            android:textSize="50dp"
            android:textColor="@color/color_bg_grey"
            android:gravity="center"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/dw_left_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="@color/color_bg_grey"
        android:layout_gravity="start">

        <TextView
            android:id="@+id/tv_drawer"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/color_btn_bg_white"
            android:text="@string/menu"
            android:textSize="50dp"
            android:textColor="@color/color_bg_grey"
            android:gravity="center"/>

    </LinearLayout>



</androidx.drawerlayout.widget.DrawerLayout>